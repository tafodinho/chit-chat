
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h1>New Posts</h1>

<% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "flash #{key}" %>
  <% end %>

  <%= form_for(@micropost) do |f| %>
    
    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= f.submit "Create post", class: "btn btn-primary" %>
  <% end %>
  
</div>
</div>